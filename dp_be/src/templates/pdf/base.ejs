<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Noto+Sans+Sinhala:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #1a365d;
            --secondary: #2d3748;
            --accent: #3182ce;
            --border: #e2e8f0;
            --bg-light: #f7fafc;
            --text-main: #2d3748;
            --text-muted: #718096;
        }

        @page {
            size: A4;
            margin: 0;
        }

        body {
            font-family: 'Inter', 'Noto Sans Sinhala', sans-serif;
            margin: 0;
            padding: 20mm 15mm;
            color: var(--text-main);
            line-height: 1.5;
            background: white;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid var(--primary);
            padding-bottom: 5mm;
            margin-bottom: 10mm;
        }

        .school-info h1 {
            margin: 0;
            font-size: 24pt;
            color: var(--primary);
            font-weight: 700;
        }

        .school-info p {
            margin: 2px 0 0 0;
            font-size: 10pt;
            color: var(--text-muted);
        }

        .report-meta {
            text-align: right;
        }

        .report-meta h2 {
            margin: 0;
            font-size: 16pt;
            color: var(--secondary);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .report-meta p {
            margin: 2px 0 0 0;
            font-size: 9pt;
            color: var(--text-muted);
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin-bottom: 8mm;
            background: var(--bg-light);
            padding: 4mm;
            border-radius: 4px;
            border-left: 4px solid var(--accent);
        }

        .info-item label {
            display: block;
            font-size: 8pt;
            font-weight: 600;
            color: var(--text-muted);
            text-transform: uppercase;
        }

        .info-item span {
            font-size: 10pt;
            font-weight: 700;
            color: var(--primary);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10mm;
        }

        th {
            background-color: var(--primary);
            color: white;
            text-align: left;
            padding: 3mm;
            font-size: 9pt;
            font-weight: 600;
            text-transform: uppercase;
        }

        td {
            padding: 3mm;
            border-bottom: 1px solid var(--border);
            font-size: 9pt;
        }

        tr:nth-child(even) {
            background-color: #fcfcfc;
        }

        .footer {
            position: fixed;
            bottom: 10mm;
            left: 15mm;
            right: 15mm;
            border-top: 1px solid var(--border);
            padding-top: 3mm;
            display: flex;
            justify-content: space-between;
            font-size: 8pt;
            color: var(--text-muted);
        }

        .badge {
            display: inline-block;
            padding: 1px 6px;
            border-radius: 12px;
            font-size: 8pt;
            font-weight: 600;
        }

        .badge-active { background: #c6f6d5; color: #22543d; }
        .badge-inactive { background: #fed7d7; color: #822727; }

        /* Print utilities */
        @media print {
            .no-print { display: none; }
            tr { page-break-inside: avoid; }
        }
    </style>
</head>
<body>
    <header>
        <div class="school-info">
            <h1><%= schoolName || 'Dharmapala Vidyalaya' %></h1>
            <p><%= schoolAddress || 'Pannipitiya, Sri Lanka' %></p>
        </div>
        <div class="report-meta">
            <h2><%= title %></h2>
            <p>Generated: <%= new Date().toLocaleString() %></p>
        </div>
    </header>

    <% if (typeof summaryItems !== 'undefined' && summaryItems.length > 0) { %>
    <div class="info-grid">
        <% summaryItems.forEach(item => { %>
            <div class="info-item">
                <label><%= item.label %></label>
                <span><%= item.value %></span>
            </div>
        <% }) %>
    </div>
    <% } %>

    <table>
        <thead>
            <tr>
                <% columns.forEach(col => { %>
                    <th style="<%= col.width ? 'width:' + col.width : '' %>"><%= col.label %></th>
                <% }) %>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach(row => { %>
                <tr>
                    <% columns.forEach(col => { %>
                        <td>
                            <% if (col.key === 'status') { %>
                                <span class="badge badge-<%= row[col.key] === 'active' ? 'active' : 'inactive' %>">
                                    <%= row[col.key] %>
                                </span>
                            <% } else { %>
                                <%= row[col.key] || '-' %>
                            <% } %>
                        </td>
                    <% }) %>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="footer">
        <div>System-generated report - <%= schoolName %></div>
        <div>Page 1 of 1</div>
    </div>
</body>
</html>
